{
  "name": "music-service",
  "version": "0.1.0",
  "description": "GraphQL service supporting the music database",
  "author": "spopp",
  "license": "ISC",
  "main": "server.js",
  "keywords": [
    "Apollo",
    "Graphql",
    "Backend",
    "Prisma",
    "Mariadb",
    "Docker",
    "Node.js"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --transpile-only --no-notify --exit-child src/server.ts",
    "generate": "ts-node --transpile-only src/schema",
    "migrate:deploy": "npx prisma migrate deploy",
    "build": "npx prisma generate && npm run generate && tsc",
    "start": "node build/src/server.js",
    "format": "prettier --ignore-path .gitignore --config .prettierrc '**/*.+(js|json|ts|tsx)' --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "apollo-server": "^3.6.7",
    "apollo-server-core": "^3.6.7",
    "bcryptjs": "^2.4.3",
    "graphql": "^16.3.0",
    "graphql-middleware": "^6.1.25",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^1.3.0",
    "nexus-prisma": "^0.35.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.39",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "prisma": "^4.0.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
